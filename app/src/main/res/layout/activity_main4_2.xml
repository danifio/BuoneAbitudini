<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.java.therightwaytousethekeyboard.MainActivity4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/cinque"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textSize"
            android:text="Distogliere spesso gli occhi dallo schermo,
prendere brevi pause frequenti per muoversi, rilassarsi, migliorando pertanto la propria precisione di scrittura e non danneggiare il sistema osteoarticolare."

            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerInside"
            android:src="@drawable/relax"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back4_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorBottomBack"
                android:textColor="#fff"
                android:text="INDIETRO"
                android:onClick="Back4_2"
                />

            <Button
                android:id="@+id/next4_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorBottomNext"
                android:textColor="#fff"
                android:text="AVANTI"
                android:onClick="Next4_2"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>